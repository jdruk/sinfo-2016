<div class="row">
    <div class="small-12 small-centered columns">
        <div class="row text-center">
<p id="notice"><%= notice %></p>

<h1>Artigos</h1>

<table>
  <thead>
    <tr>
      <th>Arquivo</th>
      <th>Usuário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.file_article %></td>
        <td><%= article.user %></td>
        <td><%= link_to 'Mostrar', article %></td>
        <td><%= link_to 'Editar', edit_article_path(article) %></td>
        <td><%= link_to 'Excluir', article, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo artigo', new_article_path %>
</div>
</div>
</div>