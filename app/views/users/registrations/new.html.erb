<div class="row">
  <div class="medium-6 medium-centered large-4 large-centered columns">
    <h2 class="text-center">Cadastro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :nome %><br />
            <%= f.text_field :name%>
        </div>

        <div class="field">
          <%= f.label :cpf %><br />
            <%= f.text_field :cpf%>
        </div>

        <div class="field">
          <%= f.label :telefone %><br />
            <%= f.text_field :telephone%>
        </div>

        <div class="field">
          <%= f.label :camiseta %><br />
            <%= f.select :shirkt, options_for_select([ :nenhuma,:grande_masculina, :media_masculina,:pequena_masculina,
            :grande_feminino, :media_feminino,:pequena_feminino], :nenhuma) %>
        </div>

        <div class="field">
          <%= f.label :senha %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em>
              <% end %><br />
                <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :confirmar_senha %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <%= f.fields_for :course_users do |subf| %>
          <div class="field">
            <%= subf.collection_select :course_id , Course.available(subf.object.category), :id, :name, prompt: "Nenhum" %>
          </div>
          <% end %>

            <div class="actions">
              <%= f.submit "Cadastrar" ,class: 'button expanded'%>
            </div>
            <% end %>

              <%= render "users/shared/links" %>

  </div>
</div>
